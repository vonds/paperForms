<section class="card card-body">
    <h3>Create Form</h3>
    <form action="/forms" method="post">
        <section class="form-group">
            <input type="text" class="form-control" name="survey" id="survey" placeholder="title" required value="<%= survey %>">
        </section>
        <section class="form-group">
            <input type="text" class="form-control" name="question" placeholder="quesion" required>
            <input type="hidden" value="text" name="type">
        </section>
        <section class="form-group">
            <textarea class="form-control" name="answer" disabled></textarea>
        </section>
        <button type="submit" class="btn btn-dark">Save</button>
    </form>
</section>